<%- include('./navbar'); %>





<main>
    <div class="container">
        <div class="row py-5 mt-4 align-items-center ">
            
            <div class="col-md-5 pr-lg-5 mb-5 mb-md-0 log-div">
            <img src="/assets/Add User-amico.svg" alt="Example Image" class="img-fluid mb-3 d-none d-md-block" style="width: 100%; margin-left: 4%;">
                <h2 style="color:#04044c; font-weight: bold; text-align: center;"> Dichiara una categoria preferita per essere notificato quando sarà pubblicato un evento di tale categoria. </h2>
                
            </div>
            
            <!-- Preferenza Form -->
            <div class="col-md-7 col-lg-5 ml-auto login">
              <form action="/setPreferenza" method="POST">
                <%- include ("./messages") %>
                <% if(typeof preferenza !== 'undefined' && preferenza !== null) { %>
                  La tua categoria preferia è: <%= preferenza %>
              <% } else{ %> 
                  Non hai ancora espresso una categoria preferita!
              <% } %>
                    
                    <div class="row ">
    
                        <div class="input-group col-lg-12 mb-4">
                            <fieldset>
                              <legend>Indica la tua preferenza</legend>
                              <select name="preferenza" >
                              <option value="musica" selected="selected">Musica </option>
                              <option value="teatro">Teatro </option>
                              <option value="cultura">Cultura </option>
                              <option value="sport">Sport </option>
                              <option value="cinema">Cinema </option>
                              <option value="discoteca">Discoteca </option>
                              </select>
                            </fieldset>   
                          </div>
                        
                        <!-- Submit Button -->
                       
                        
                        <div class="form-group col-lg-12 mx-auto mb-0" style="margin-top:2%;">
                            
                       
                        <button type="submit" class="nav-mybutton" style="width:100%;height:5vh;"">
                          Registra
                        </button>
                      
                        </div>
                       
                        
                    </div>
                  </form>
            </div>
        </div>
    </div>
  </main>
<%- include('./footer'); %>